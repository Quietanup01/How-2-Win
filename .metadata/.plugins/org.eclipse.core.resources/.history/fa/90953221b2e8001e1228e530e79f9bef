package bank;

import javax.swing.*;
import java.awt.*;

public class CustomerLogin extends JFrame {
    private JTextField cardNumberField;
    private JPasswordField pinField;
    private JButton loginButton;

    public CustomerLogin() {
        setTitle("Customer Login");
        setSize(600, 750);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null); // Center the frame
        getContentPane().setBackground(Color.LIGHT_GRAY);
        setLayout(new GridLayout(3, 1)); // Arrange components vertically

        JLabel cardNumberLabel = new JLabel("Card Number:");
        cardNumberField = new JTextField();
        JPanel cardNumberPanel = new JPanel(new FlowLayout(FlowLayout.CENTER));
        cardNumberPanel.add(cardNumberLabel);
        cardNumberPanel.add(cardNumberField);

        JLabel pinLabel = new JLabel("PIN:");
        pinField = new JPasswordField();
        JPanel pinPanel = new JPanel(new FlowLayout(FlowLayout.CENTER));
        pinPanel.add(pinLabel);
        pinPanel.add(pinField);

        loginButton = new JButton("Login");
        loginButton.addActionListener(e -> {
            // Add login logic here
            String cardNumber = cardNumberField.getText();
            String pin = new String(pinField.getPassword());
            System.out.println("Card Number: " + cardNumber);
            System.out.println("PIN: " + pin);
        });

        add(cardNumberPanel);
        add(pinPanel);
        add(loginButton);

        setVisible(true);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(CustomerLogin::new);
    }
}

